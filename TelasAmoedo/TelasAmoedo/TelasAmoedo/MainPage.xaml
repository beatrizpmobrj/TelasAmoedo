<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelasAmoedo.MainPage"
             xmlns:Views="clr-namespace:TelasAmoedo.Views"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ShellItem Route="Login" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate Views:Login}" />
    </ShellItem>

    <TabBar Route="MenuPrincipal">
        <Tab Icon="{OnPlatform Android=home}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=user}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=carteira}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=notificacoes}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=menuham}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
