<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelasAmoedo.MainPage"
             xmlns:Views="clr-namespace:TelasAmoedo.Views"
             Shell.NavBarIsVisible="False">

    <ShellItem Route="Login" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate Views:Login}" />
    </ShellItem>

    <TabBar Route="MenuPrincipal">
        <Tab Icon="{OnPlatform Android=home}">
            <ShellContent ContentTemplate="{DataTemplate Views:MenuPrincipal}">
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=user}">
            <ShellContent>
                <Views:MenuPrincipal/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=wallet}">
            <ShellContent>
                <Views:MenuVoucher/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=notification}">
            <ShellContent>
                <Views:Resgate/>
            </ShellContent>
        </Tab>

        <Tab Icon="{OnPlatform Android=menu}">
            <ShellContent>
                <Views:Campanha03/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
