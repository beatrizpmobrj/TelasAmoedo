<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelasAmoedo.Views.ConfirmacaoNumero">
    <ContentPage.Content>

        <StackLayout Padding="10" >
            <Grid Padding="5,0,5,10" ColumnDefinitions="*" RowDefinitions="80,*,70,50" >
                <StackLayout Padding="20,0,20,20" Grid.Row="1">
                    <Label Text="Insira seu telefone" FontSize="20" HorizontalOptions="Center" />
                    <Label Text="Enviaremos um código de login por SMS para esse número que você cadastrar." FontSize="14" HorizontalOptions="Center" />
                </StackLayout>
                <Image Grid.Row="2" Source="shield" />
                <Entry Grid.Row="3" Placeholder="(00) 00000-0000" BackgroundColor="LightGray" Keyboard="Numeric" />
            </Grid>
            <StackLayout >
                <BoxView HeightRequest="0.5" WidthRequest="0.5" Color="Gray" />
                <Button Margin="0,20,0,0" Text="Avançar" BackgroundColor="DarkRed" TextColor="White" CornerRadius="7" WidthRequest="250" HeightRequest="40" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>